<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="162dp"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo"
    android:layout_marginBottom="4dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="143dp"
            android:layout_height="70dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/samplebg"
            android:scaleType="fitCenter"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_thumbnail"
            android:paddingBottom="18dp"
            android:paddingEnd="18dp"
            android:paddingStart="18dp"
            android:paddingTop="8dp">

            <RelativeLayout
                android:id="@+id/rl_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="34dp"
                    android:layout_height="14dp"
                    android:background="@drawable/bg_yellow">

                    <TextView
                        fontPath="fonts/bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:letterSpacing="0.05"
                        android:text="#Tech"
                        android:textColor="@color/colorBlack"
                        android:textSize="8sp"
                        app:ignore="MissingPrefix" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_date"
                    fontPath="fonts/bold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:letterSpacing="0.05"
                    android:text="12 Dec 2018"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="7sp"
                    app:ignore="MissingPrefix" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_news_title"
                fontPath="fonts/serif.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_tag"
                android:layout_marginTop="12dp"
                android:text="Former NBC producer who
work on Ronan Farrow&apos;s Harvey Weinstein reporting breaks
silence"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:ignore="MissingPrefix" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="11dp"
                android:layout_below="@id/tv_news_title"
                android:background="#f2f2f2" />

            <TextView
                android:id="@+id/tv_author"
                fontPath="fonts/regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_marginTop="11dp"
                android:text="Author: "
                android:textColor="@color/colorTextGrey"
                android:textSize="10sp"
                app:ignore="MissingPrefix" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>